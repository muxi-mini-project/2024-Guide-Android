<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/alarm_permission_button"
        android:layout_width="328dp"
        android:layout_height="106dp"
        android:text="设置闹钟权限"
        android:background="@drawable/xinxik"/>

    <Button
        android:id="@+id/gallery_permission_button"
        android:layout_width="328dp"
        android:layout_height="95dp"
        android:background="@drawable/xinxik"
        android:layout_below="@id/alarm_permission_button"
        android:layout_marginTop="3dp"
        android:text="设置相册权限" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="328dp"
        android:layout_height="89dp"
        android:background="@drawable/xinxik"
        android:layout_below="@id/gallery_permission_button"
        android:layout_marginTop="9dp"
        android:text="退出登录" />


</RelativeLayout>